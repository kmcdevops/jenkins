pipeline {
  agent any

  environment {
    SCANNER_HOME = tool 'SonarScanner 2.1'  // Use your actual SonarScanner name
  }

  stages {
    stage('Checkout') {
      steps {
        git 'https://github.com/kmcdevops/jenkins.git'
      }
    }

    stage('Build') {
      steps {
        dir('javaapp-pipeline') { // ðŸ‘ˆ this is where pom.xml is
          sh 'mvn clean install'
        }
      }
    }

    stage('SonarQube Scan') {
      steps {
        withSonarQubeEnv('SonarQube') { // ðŸ‘ˆ Use the name of your SonarQube server config
          dir('javaapp-pipeline') {
            sh """
              ${SCANNER_HOME}/bin/sonar-scanner \
              -Dsonar.projectKey=demo-project \
              -Dsonar.sources=. \
              -Dsonar.java.binaries=target
            """
          }
        }
      }
    }

    stage("Quality Gate") {
      steps {
        timeout(time: 1, unit: 'MINUTES') {
          waitForQualityGate abortPipeline: true
        }
      }
    }
  }
}
