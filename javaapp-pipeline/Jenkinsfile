pipeline {
  agent any

  tools {
    maven 'Maven 3.8'         // if using Maven
  }

  environment {
    SCANNER_HOME = tool 'SonarScanner' // matches name from tool config
  }

  stages {
    stage('Checkout') {
      steps {
        git 'https://github.com/kmcdevops/jenkins.git
      }
    }

    stage('Build') {
      steps {
        sh 'mvn clean install'
      }
    }

    stage('SonarQube Scan') {
      steps {
        withSonarQubeEnv('SonarQube') {
          sh "${SCANNER_HOME}/bin/sonar-scanner -Dsonar.projectKey=demo-project -Dsonar.sources=. -Dsonar.java.binaries=target"
        }
      }
    }

    stage("Quality Gate") {
      steps {
        timeout(time: 1, unit: 'MINUTES') {
          waitForQualityGate abortPipeline: true
        }
      }
    }
  }
}
